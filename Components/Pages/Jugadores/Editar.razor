@page "/jugadores/edit/{JugadorId:int}"
@rendermode InteractiveServer

@inject JugadoresService jugadoresService
@inject ToastService toastService
@inject NavigationManager navigationManager

<PageTitle>Editar Jugador</PageTitle>

<EditForm Model="JugadorModel" OnValidSubmit="Modificar" FormName="JugadorEditForm">
    <DataAnnotationsValidator />

    @* Validaciones arriba con fondo rojo *@
    <ValidationSummary />
    <div class="alert alert-danger mt-2" role="alert"
         style="display:@(EditContext?.GetValidationMessages().Any() == true ? "block" : "none")">
        Corrige los errores antes de continuar.
    </div>

    <div class="container">
        <div class="card shadow-lg">
            <div class="card-header text-center bg-primary text-white">
                <h5 class="card-title">Editar Jugador</h5>
            </div>

            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label"><strong>Nombres</strong></label>
                    <InputText class="form-control" @bind-Value="JugadorModel.Nombres"></InputText>
                </div>

                <div class="mb-3">
                    <label class="form-label"><strong>Partidas</strong></label>
                    <InputNumber class="form-control" @bind-Value="JugadorModel.Partidas"></InputNumber>
                </div>
            </div>

            <div class="card-footer text-center mt-2">
                <a href="/jugadores" class="btn btn-secondary">
                    <span class="bi bi-arrow-left"></span> Volver
                </a>
                <button type="submit" class="btn btn-primary">
                    <span class="bi bi-floppy"></span> Modificar
                </button>
            </div>
        </div>
    </div>
</EditForm>

@code {
    [Parameter] public int JugadorId { get; set; }
    public Jugador JugadorModel { get; set; } = new Jugador();
    private EditContext? EditContext;

    protected override async Task OnInitializedAsync()
    {
        EditContext = new EditContext(JugadorModel);

        var encontrado = await jugadoresService.Buscar(JugadorId);
        if (encontrado is not null)
        {
            JugadorModel = encontrado;
            EditContext = new EditContext(JugadorModel);
        }
        else
        {
            toastService.ShowWarning("Jugador no encontrado");
            navigationManager.NavigateTo("/jugadores");
        }
    }

    private async Task Modificar()
    {
        if (await jugadoresService.ExisteNombre(JugadorModel.Nombres, JugadorModel.JugadorId))
        {
            toastService.ShowWarning("Ya existe un jugador con ese nombre");
            return;
        }

        var modificado = await jugadoresService.Guardar(JugadorModel);

        if (modificado)
        {
            toastService.ShowSuccess("Jugador modificado correctamente");
            navigationManager.NavigateTo("/jugadores", true);
        }
        else
        {
            toastService.ShowError("No se pudo modificar el jugador");
        }
    }
}
